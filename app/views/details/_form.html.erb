<% was_validated = detail.errors.any? %>

<%= form_with(model: detail, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% project_class = "form-control" %>
    <% project_was_invalid = detail.errors.include?(:project) %>

    <% if was_validated %>
      <% if project_was_invalid %>
        <% project_class << " is-invalid" %>
      <% else %>
        <% project_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :project_id %>
    <%= f.collection_select :project_id, Project.all, :id, :to_s, {}, class: "form-control" %>
    <% if project_was_invalid %>
      <% detail.errors.full_messages_for(:project).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% designer_class = "form-control" %>
    <% designer_was_invalid = detail.errors.include?(:designer) %>

    <% if was_validated %>
      <% if designer_was_invalid %>
        <% designer_class << " is-invalid" %>
      <% else %>
        <% designer_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :designer_id %>
    <%= f.collection_select :designer_id, Designer.all, :id, :to_s, {}, class: "form-control" %>
    <% if designer_was_invalid %>
      <% detail.errors.full_messages_for(:designer).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% success_score_class = "form-control" %>
    <% success_score_was_invalid = detail.errors.include?(:success_score) %>

    <% if was_validated %>
      <% if success_score_was_invalid %>
        <% success_score_class << " is-invalid" %>
      <% else %>
        <% success_score_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :success_score %>
    <%= f.text_field :success_score, class: success_score_class, placeholder: "Enter success score" %>
    <% if success_score_was_invalid %>
      <% detail.errors.full_messages_for(:success_score).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = detail.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <%= f.text_area :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% detail.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = detail.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
    <% if image_was_invalid %>
      <% detail.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = detail.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% detail.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
