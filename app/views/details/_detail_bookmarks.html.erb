<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Bookmarks

    <a data-toggle="collapse" href="#detail_bookmarks_new_form">
      Add saved detail
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @detail.bookmarks.each do |saved_detail| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to saved_detail, saved_detail %>

        <%= link_to saved_detail, method: :delete, data: { confirm: "Do you really want to delete this saved_detail" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="detail_bookmarks_new_form">
        <%= render partial: "details/detail_bookmarks_new_form" %>
      </div>
    </div>

  </ul>
</div>
