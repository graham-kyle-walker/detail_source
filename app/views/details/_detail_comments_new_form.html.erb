<%= form_with(model: @comment, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :comment_description %>
    <%= f.text_area :comment_description, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :user_id %>

    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :detail_id, value: @detail.id %>

  <%= f.submit "Create comment", class: "btn btn-block btn-outline-secondary" %>
<% end %>
