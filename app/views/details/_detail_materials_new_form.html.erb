<%= form_with(model: @material, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :product_id %>

    <%= f.collection_select :product_id, Product.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :detail_id, value: @detail.id %>

  <%= f.submit "Create material", class: "btn btn-block btn-outline-secondary" %>
<% end %>
