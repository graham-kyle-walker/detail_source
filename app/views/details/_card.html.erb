<div class="card mb-3">
  <h2 class="card-header h4">
    Detail #<%= detail.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Project</dt>
      <dd>
        <% if @detail.project.present? %>
          <%= link_to detail.project, detail.project %>
        <% end %>
      </dd>

      <dt>Designer</dt>
      <dd>
        <% if @detail.designer.present? %>
          <%= link_to detail.designer, detail.designer %>
        <% end %>
      </dd>

      <dt>Success score</dt>
      <dd><%= detail.success_score %></dd>

      <dt>Description</dt>
      <dd><%= detail.description %></dd>

      <dt>Image</dt>
      <dd>
        <%= cl_image_tag @detail.image, class: "img-fluid" %>
      </dd>

      <dt>Name</dt>
      <dd><%= detail.name %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back detail, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_detail_url(detail), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to detail, method: :delete, data: { confirm: "Do you really want to delete this detail?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(detail.updated_at) %> ago
  </div>
</div>
