<div class="card mb-3">
  <h2 class="card-header h4">
    Detail #<%= detail.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Project</dt>
      <!-- Display project_id start -->
      <dd><%= detail.project_id %></dd>
      <!-- Display project_id end -->

      <dt>Designer</dt>
      <!-- Display designer_id start -->
      <dd><%= detail.designer_id %></dd>
      <!-- Display designer_id end -->

      <dt>Success score</dt>
      <!-- Display success_score start -->
      <dd><%= detail.success_score %></dd>
      <!-- Display success_score end -->

      <dt>Description</dt>
      <!-- Display description start -->
      <dd><%= detail.description %></dd>
      <!-- Display description end -->

      <dt>Image</dt>
      <!-- Display image start -->
      <dd>
        <%= cl_image_tag @detail.image, class: "img-fluid" %>
      </dd>
      <!-- Display image end -->

      <dt>Name</dt>
      <!-- Display name start -->
      <dd><%= detail.name %></dd>
      <!-- Display name end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back detail, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link detail start -->
      <div class="col">
        <%= link_to edit_detail_url(detail), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link detail end -->

      <!-- Delete link detail start -->
      <div class="col">
        <%= link_to detail, method: :delete, data: { confirm: "Do you really want to delete this detail?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link detail end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(detail.updated_at) %> ago
  </div>
</div>
