<div class="card mb-3">
  <h2 class="card-header h4">
    Designer #<%= designer.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Project</dt>
      <dd>
        <% if @designer.project.present? %>
          <%= link_to designer.project, designer.project %>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @designer.designers.present? %>
          <%= link_to designer.designers, designer.designers %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back designer, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_designer_url(designer), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to designer, method: :delete, data: { confirm: "Do you really want to delete this designer?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(designer.updated_at) %> ago
  </div>
</div>
