<%= form_with(model: @detail, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :project_id %>

    <%= f.collection_select :project_id, Project.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :designer_id, value: @designer.id %>

  <div class="form-group">
    <%= f.label :success_score %>

    <%= f.text_field :success_score, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>

    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <%= f.submit "Create detail", class: "btn btn-block btn-outline-secondary" %>
<% end %>
