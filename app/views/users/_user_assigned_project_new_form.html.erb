<%= form_with(model: @designer, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :project_id %>

    <%= f.collection_select :project_id, Project.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <%= f.submit "Create designer", class: "btn btn-block btn-outline-secondary" %>
<% end %>
