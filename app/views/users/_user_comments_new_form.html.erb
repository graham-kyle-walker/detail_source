<!-- Form comment start -->
<%= form_with(model: @comment, local: true) do |f| %>
<!-- Form comment end -->

  <!-- Label and input for comment_description start -->
  <div class="form-group">
    <%= f.label :comment_description %>
    <!-- Input for comment_description start -->
    <%= f.text_area :comment_description, rows: "3", class: "form-control" %>
    <!-- Input for comment_description end -->
  </div>
  <!-- Label and input for comment_description end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for detail_id start -->
  <div class="form-group">
    <%= f.label :detail_id %>

    <!-- Input for detail_id start -->
    <%= f.collection_select :detail_id, Detail.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for detail_id end -->
  </div>
  <!-- Label and input for detail_id end -->

  <%= f.submit "Create comment", class: "btn btn-block btn-outline-secondary" %>
<% end %>
