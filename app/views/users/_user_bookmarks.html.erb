<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Bookmarks

    <a data-toggle="collapse" href="#user_bookmarks_new_form">
      Add saved detail
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.bookmarks.each do |saved_detail| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to saved_detail, saved_detail %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_bookmarks_new_form">
        <%= render partial: "users/user_bookmarks_new_form" %>
      </div>
    </div>

  </ul>
</div>
