<%= form_with(model: @saved_detail, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :detail_id %>

    <%= f.collection_select :detail_id, Detail.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <%= f.submit "Create saved detail", class: "btn btn-block btn-outline-secondary" %>
<% end %>
