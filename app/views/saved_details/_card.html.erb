<div class="card mb-3">
  <h2 class="card-header h4">
    Saved Detail #<%= saved_detail.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Detail</dt>
      <!-- Display detail_id start -->
      <dd><%= saved_detail.detail_id %></dd>
      <!-- Display detail_id end -->

      <dt>User</dt>
      <!-- Display user_id start -->
      <dd><%= saved_detail.user_id %></dd>
      <!-- Display user_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back saved_detail, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link saved_detail start -->
      <div class="col">
        <%= link_to edit_saved_detail_url(saved_detail), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link saved_detail end -->

      <!-- Delete link saved_detail start -->
      <div class="col">
        <%= link_to saved_detail, method: :delete, data: { confirm: "Do you really want to delete this saved_detail?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link saved_detail end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(saved_detail.updated_at) %> ago
  </div>
</div>
