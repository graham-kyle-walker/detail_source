<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Details

    <a data-toggle="collapse" href="#project_details_new_form">
      Add detail
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @project.details.each do |detail| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to detail, detail %>

        <%= link_to detail, method: :delete, data: { confirm: "Do you really want to delete this detail" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="project_details_new_form">
        <%= render partial: "projects/project_details_new_form" %>
      </div>
    </div>

  </ul>
</div>
