<%= search_form_for @q, :class => collapse_search_form, :id => "projects_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :completion_date, "Completion date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='completion_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :completion_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Completion date greater than or equal to", :data => {:target => '#completion_dategteqPicker'} %>
          <div class="input-group-append" data-target='#completion_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='completion_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :completion_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Completion date less than or equal to", :data => {:target => '#completion_datelteqPicker'} %>
          <div class="input-group-append" data-target='#completion_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#completion_dategteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#completion_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#completion_dategteqPicker').on("dp.change", function (e) {
              $('#completion_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#completion_datelteqPicker').on("dp.change", function (e) {
              $('#completion_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :project_manager_email_cont, "Project manager email contains" %>
    <%= f.text_field :project_manager_email_cont, :class => "form-control", :placeholder => "Project manager email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :suppliers_name_cont, "Suppliers name contains" %>
    <%= f.text_field :suppliers_name_cont, :class => "form-control", :placeholder => "Suppliers name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/projects" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#projects_filters">
  Show filters
</a>
