<div class="card mb-3">
  <h2 class="card-header h4">
    Material #<%= material.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= material.name %></dd>

      <dt>Product</dt>
      <dd>
        <% if @material.product.present? %>
          <%= link_to material.product, material.product %>
        <% end %>
      </dd>

      <dt>Detail</dt>
      <dd>
        <% if @material.detail.present? %>
          <%= link_to material.detail, material.detail %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back material, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_material_url(material), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to material, method: :delete, data: { confirm: "Do you really want to delete this material?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(material.updated_at) %> ago
  </div>
</div>
